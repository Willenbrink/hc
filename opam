opam-version: "2.0"
synopsis: """Connected hypertext for interactive web pages"""
maintainer: ["Daniel BÃ¼nzli <daniel.buenzl i@erratique.ch>"]
authors: ["The hc programmers"]
homepage: "https://erratique.ch/software/hc"
